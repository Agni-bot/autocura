# Configurações do Ambiente de Teste

# Ambiente
ENVIRONMENT=test
DEBUG=true
LOG_LEVEL=DEBUG

# API
API_HOST=localhost
API_PORT=8000
API_VERSION=v1
API_TIMEOUT=30
API_RETRY_COUNT=3

# Banco de Dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test
DB_PASSWORD=test
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# Memória
MEMORY_PATH=./test-data/memory.json
MEMORY_BACKUP_PATH=./test-data/backups
MEMORY_CLEANUP_INTERVAL=3600
MEMORY_MAX_SIZE=1000

# Cache
CACHE_TYPE=redis
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=3600

# Logs
LOG_PATH=./test-data/logs
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoramento
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
LOKI_PORT=3101
METRICS_INTERVAL=60
ALERT_CHECK_INTERVAL=300

# Segurança
ENCRYPTION_KEY=test_key_123
JWT_SECRET=test_jwt_secret_123
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
CORS_ORIGINS=http://localhost:3000

# Autocura
AUTOCURA_ENABLED=true
AUTOCURA_INTERVAL=300
AUTOCURA_MAX_RETRIES=3
AUTOCURA_TIMEOUT=60
AUTOCURA_THRESHOLD=0.8

# Ética
ETICA_ENABLED=true
ETICA_CHECK_INTERVAL=300
ETICA_THRESHOLD=0.9
ETICA_MAX_VIOLATIONS=3

# Diagnóstico
DIAGNOSTICO_ENABLED=true
DIAGNOSTICO_INTERVAL=300
DIAGNOSTICO_DEPTH=3
DIAGNOSTICO_TIMEOUT=60

# Correção
CORRECAO_ENABLED=true
CORRECAO_INTERVAL=300
CORRECAO_MAX_RETRIES=3
CORRECAO_TIMEOUT=60

# Aprendizado
APRENDIZADO_ENABLED=true
APRENDIZADO_INTERVAL=3600
APRENDIZADO_BATCH_SIZE=100
APRENDIZADO_EPOCHS=10

# Feedback
FEEDBACK_ENABLED=true
FEEDBACK_INTERVAL=300
FEEDBACK_THRESHOLD=0.7
FEEDBACK_MAX_SAMPLES=1000

# Orquestração
KUBERNETES_ENABLED=false
KUBERNETES_NAMESPACE=test
KUBERNETES_TIMEOUT=300
KUBERNETES_MAX_RETRIES=3

# Integração
INTEGRACAO_ENABLED=true
INTEGRACAO_TIMEOUT=30
INTEGRACAO_MAX_RETRIES=3
INTEGRACAO_BATCH_SIZE=100

# Observabilidade
OBSERVABILIDADE_ENABLED=true
OBSERVABILIDADE_INTERVAL=60
OBSERVABILIDADE_DEPTH=3
OBSERVABILIDADE_TIMEOUT=30

# Guardião
GUARDIAO_ENABLED=true
GUARDIAO_INTERVAL=300
GUARDIAO_THRESHOLD=0.8
GUARDIAO_MAX_VIOLATIONS=3

# Will
WILL_ENABLED=true
WILL_INTERVAL=300
WILL_THRESHOLD=0.7
WILL_MAX_RETRIES=3

# Testes
TEST_TIMEOUT=300
TEST_MAX_FAILURES=3
TEST_COVERAGE_THRESHOLD=80
TEST_PARALLEL_JOBS=4
TEST_RANDOM_SEED=42 